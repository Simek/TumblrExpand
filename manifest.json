{
	"name": "Tumblr Expand",
	"description": "Tumblr dashboard posts expand on demand.",
	"version": "0.0.1",

	"background": {
		"persistance": false
	},

	"content_scripts": [
		{
			"css": ["css/tumblr.css"],
			"js": ["lib/jquery.js", "tumblr.js"],
			"matches": ["*://www.tumblr.com/dashboard"]
		}
	],

	"permissions": [
		"*://www.tumblr.com/"
	],

	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"web_accessible_resources": [
		"img/icon.png"
	],

	"offline_enabled": false,
	"minimum_chrome_version": "22",
	"manifest_version": 2
}
